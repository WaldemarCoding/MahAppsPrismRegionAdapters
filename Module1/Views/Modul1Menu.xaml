<mah:HamburgerMenuItemCollection x:Class="Module1.Views.Modul1Menu"
                                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                 xmlns:mvvm="http://prismlibrary.com/"
                                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                                 mvvm:ViewModelLocator.AutoWireViewModel="True"
                                 mc:Ignorable="d">
    <mah:HamburgerMenuHeaderItem Label="Module 1" />
    <mah:HamburgerMenuItem Label="go to ViewA" Command="{Binding NavigateCommand}" CommandParameter="ViewA"/>
    <mah:HamburgerMenuItem Label="go to ViewB" Command="{Binding NavigateCommand}" CommandParameter="ViewB"/>
    <mah:HamburgerMenuSeparatorItem />
</mah:HamburgerMenuItemCollection>
